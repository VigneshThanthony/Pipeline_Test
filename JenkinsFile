        {
            steps
            {
                echo 'Build App'
            } 
                        
        }

        stage ('Build1')
        {
            steps
            {
                echo 'Build1 App'
            } 
                        
        }
                                      
        stage ('Test')
        {
            steps
            {
                echo 'Test App'
            }
        }
        
        stage ('Deploy')
        {
            steps
            {
                echo 'Deploy App'
            }
        }
    }
    post
     {
        always
        {
           emailtext body: 'Testing purpose.', subject: 'Pipeline Mail Notification', to: 'vigneshwicky17173@gmail.com' 
        }
    }
 }
  

